{
  "default": "mock",
  "backends": {
    "mock": {
      "baseURL": "http://localhost:5000",
      "auth": { "type": "basic" }
    },
    "real": {
      "baseURL": "http://localhost:8000",
      "auth": { "type": "bearer-id-token" }
    },
    "feedback": {
      "baseURL": "https://nvaifactory-feedback-prd.nvidia.com",
      "auth": { "type": "bearer-id-token" }
    }
  },
  "routes": [
    { "pattern": "^/chat/stream$", "backend": "real" },
    { "pattern": "^/chats", "backend": "real" },
    { "pattern": "^/export", "backend": "mock" },
    { "pattern": "^/auxiliary/chart", "backend": "mock" },
    { "pattern": "^/settings", "backend": "mock" },
    { "pattern": "^/analysis", "backend": "mock" },
    { "pattern": "^/api/v1/feedback", "backend": "feedback" }
  ]
}
